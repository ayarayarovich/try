<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginStart="9dp"
        android:layout_marginTop="11dp"

        android:background="@drawable/menu"

        />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="33dp"

        android:gravity="center"

        android:fontFamily="@font/days_one_regular_family"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="@string/app_name"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"

        android:background="@drawable/message_notif"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/bottom_menu"
        app:cardElevation="20dp"
        >
        <ImageView




            android:layout_width="match_parent"
            android:layout_height="58dp"



            android:background="@drawable/bottom_menu"

            />
    </androidx.cardview.widget.CardView>





    <View
        android:id="@+id/objects_choice"

        app:layout_constraintLeft_toLeftOf="@+id/bottom_menu"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_menu"
        app:layout_constraintTop_toTopOf="@+id/bottom_menu"
        app:layout_constraintRight_toLeftOf="@+id/payment_choice"

        android:layout_width="28dp"
        android:layout_height="28dp"

        android:layout_marginBottom="13dp"

        android:translationZ="21dp"

        android:background="@drawable/objects_choice_off"

        />

    <TextView
        android:id="@+id/objects_choice_text_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="@+id/objects_choice"
        app:layout_constraintLeft_toLeftOf="@id/objects_choice"
        app:layout_constraintTop_toBottomOf="@+id/objects_choice"

        android:fontFamily="@font/days_one_regular_family"
        android:textColor="@color/inactiveWhite"
        android:text="@string/objects_choice"
        android:textSize="11sp"


        android:translationZ="21dp"
        />

    <View
        android:id="@+id/objects_choice_click_area"

        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_marginStart="-10dp"
        android:layout_marginTop="-5dp"

        android:translationZ="22dp"

        android:clickable="true"
        android:focusable="true"

        app:layout_constraintTop_toTopOf="@+id/objects_choice"
        app:layout_constraintStart_toStartOf="@id/objects_choice"

        />

    <View
        android:id="@+id/payment_choice"

        app:layout_constraintLeft_toRightOf="@+id/objects_choice"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_menu"
        app:layout_constraintTop_toTopOf="@+id/bottom_menu"
        app:layout_constraintRight_toLeftOf="@+id/profile_choice"

        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginBottom="13dp"

        android:translationZ="21dp"

        android:background="@drawable/payment_choice_off"

        />

    <TextView
        android:id="@+id/payment_choice_text_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="@+id/payment_choice"
        app:layout_constraintLeft_toLeftOf="@id/payment_choice"
        app:layout_constraintTop_toBottomOf="@+id/payment_choice"

        android:fontFamily="@font/days_one_regular_family"
        android:textColor="@color/inactiveWhite"
        android:text="@string/payment_choice"
        android:textSize="11sp"

        android:translationZ="21dp"
        />

    <View
        android:id="@+id/payment_choice_click_area"

        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_marginStart="-10dp"
        android:layout_marginTop="-5dp"

        android:translationZ="22dp"

        android:clickable="true"
        android:focusable="true"

        app:layout_constraintTop_toTopOf="@+id/payment_choice"
        app:layout_constraintStart_toStartOf="@id/payment_choice"

         />

    <View
        android:id="@+id/profile_choice"

        app:layout_constraintBottom_toBottomOf="@+id/bottom_menu"
        app:layout_constraintTop_toTopOf="@+id/bottom_menu"
        app:layout_constraintRight_toRightOf="@+id/bottom_menu"
        app:layout_constraintLeft_toRightOf="@id/payment_choice"

        android:layout_width="28dp"
        android:layout_height="28dp"

        android:layout_marginBottom="13dp"

        android:background="@drawable/profile_choice_off"

        android:translationZ="21dp"


        />

    <TextView
        android:id="@+id/profile_choice_text_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="@+id/profile_choice"
        app:layout_constraintLeft_toLeftOf="@id/profile_choice"
        app:layout_constraintTop_toBottomOf="@+id/profile_choice"

        android:fontFamily="@font/days_one_regular_family"
        android:textColor="@color/inactiveWhite"
        android:text="@string/profile_choice"
        android:textSize="11sp"

        android:translationZ="21dp"

        />

    <View
        android:id="@+id/profile_choice_click_area"

        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_marginStart="-10dp"
        android:layout_marginTop="-5dp"

        android:translationZ="22dp"

        android:clickable="true"
        android:focusable="true"

        app:layout_constraintTop_toTopOf="@+id/profile_choice"
        app:layout_constraintStart_toStartOf="@id/profile_choice"

        />


    <androidx.fragment.app.FragmentContainerView

        android:id="@+id/main_fragment"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="55dp"

        android:layout_width="366dp"
        android:layout_height="wrap_content"

        />

</androidx.constraintlayout.widget.ConstraintLayout>